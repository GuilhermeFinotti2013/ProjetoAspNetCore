@using ProjetoAspNetCore.Domain.Enums
@model ProjetoAspNetCore.Domain.Models.Paciente

@{
    ViewData["Title"] = "Editar paciente";
}

<vc:cabecalho titulo="SysMed - Controle hospitalar simples" subtitulo="Módulo de paciente"></vc:cabecalho>

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Editar Paciente</h3>
    </div>
    <div class="panel panel-body">
        <form asp-action="Edit">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="_criar_editar" />
            </div>
            <div>
                <input type="submit" value="Editar paciente" class="btn btn-success" />
                <a asp-controller="Paciente" asp-action="Index" class="btn btn-default">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>