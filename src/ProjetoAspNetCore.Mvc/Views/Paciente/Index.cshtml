@using ProjetoAspNetCore.Mvc.Extensions.ExtensionsMethods
@model IEnumerable<ProjetoAspNetCore.Domain.Models.Paciente>

@{
    ViewData["Title"] = "Lista de pacientes";
}

<vc:cabecalho titulo="SysMed - Controle hospitalar simples" subtitulo="Módulo de paciente"></vc:cabecalho>

<partial name="PartialViews/_estado_paciente" />

<div class="row" style="margin-top: 12px;">
    <div class="col-lg-12">
        <p>
            <button class="btn btn-default create" data-toggle="tooltip" data-placement="bottom" title="Adicionar um novo tipo de genérico" data-original-title="Adicionar um novo genérico">
                <i class="glyphicon glyphicon-plus-sign"></i>
            </button>
            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-default">Home</a>
        </p>

        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> MédicalSystem - Cadastro de Genéricos</h4>
                </div>
                <div class="panel-body">
                    @*<listar-dados Items="@Model"></listar-dados>*@

                    <table class="table table-bordered table-hover">
                        <thead class="dark">
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataNascimento)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Ativo)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.TipoPaciente)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sexo)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.EstadoPaciente.Descricao)
                                </th>

                                <th>Ação</th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                //var dataNascPtBr = item.DataNascimento.ToBrazilianDate();
                                var dateTimeNascPtBr = item.DataNascimento.ToBrazilianDate();
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @dateTimeNascPtBr
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPaciente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sexo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoPaciente.Descricao)
                    </td>

                    <td class="text-right">
                        <a asp-controller="Paciente" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-square fa-2x" title="Editar Paciente"></span> </a>
                        <a asp-controller="Paciente" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search fa-2x" title="Detalhes Paciente"></span> </a>
                        <a asp-controller="Paciente" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash fa-2x" title="Excluir Paciente"></span> </a>
                    </td>

                </tr>            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-style6"
     id="modalGnerico"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">

</div>

@section Scripts{

    <script src="~/bundle/dataTables.min.js"></script>

    <script type="text/javascript">

        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modalGnerico").load("/Paciente/Details?id=" + id, function () {
                $("#modalGnerico").modal();
            });
        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modalGnerico").load("/Paciente/Delete?id=" + id, function () {
                $("#modalGnerico").modal();
            });
        });

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modalGnerico").load("/Paciente/Edit?id=" + id, function () {
                $("#modalGnerico").modal();
            });
        });

        $(".create").click(function () {
            $("#modalGnerico").load("/Paciente/Create", function () {
                $("#modalGnerico").modal();
            });
        });

    </script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "/myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}