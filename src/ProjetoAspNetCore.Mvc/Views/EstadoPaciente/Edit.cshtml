@model ProjetoAspNetCore.Domain.Models.EstadoPaciente
@using ProjetoAspNetCore.Mvc.Enums

@{ ViewBag.Title = "Edição do Estado de Paciente: [ " + Model.Descricao.ToUpper() + " ]";
                Layout = null; }

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">MedicalSystem</h4>
        </div>
        @using (Html.BeginForm())
        {
@Html.AntiForgeryToken()

                <div class="modal-body">
                    <div class="form-horizontal">
                        <montar-formulario Modelo="@Model" Titulo="@ViewData["Title"]" Tipo="@TipoFormulario.Editar"></montar-formulario>
                    </div>
                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Atualizar" class="btn btn-success" />
                                    <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                                </div>}
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
