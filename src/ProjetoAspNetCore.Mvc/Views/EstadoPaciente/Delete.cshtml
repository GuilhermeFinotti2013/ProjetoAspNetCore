@model ProjetoAspNetCore.Domain.Models.EstadoPaciente
@{
    ViewData["Title"] = "Deletar tipo de paciente";
}

<vc:cabecalho titulo="SysMed - Controle hospitalar simples" subtitulo="Módulo Estado do paciente"></vc:cabecalho>

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Tem certeza que deseja excluir o tipo de paciente @Model.Descricao?</h3>
    </div>
    <div class="panel panel-body">
        <div>
            <partial name="_delete_detalhes" />
        </div>
        <div>
            <form asp-controller="EstadoPaciente" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-controller="EstadoPaciente" asp-action="Index" class="btn btn-info">Voltar para a Lista</a>
            </form>
        </div>
    </div>
</div>

